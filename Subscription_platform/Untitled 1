CREATE TABLE USER_TBL(User_ID Varchar2(12) CONSTRAINT User_ID_pk PRIMARY KEY, Full_Name Varchar2(150), Email Varchar2(100), Phone Varchar2(20), Account_Status Varchar2(20), Created_Date Date);
    
