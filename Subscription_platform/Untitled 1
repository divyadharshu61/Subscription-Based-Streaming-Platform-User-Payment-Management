   //SUBSCRIPTION_TBL 
 CREATE TABLE SUBSCRIPTION_TBL( Subscription_ID Number(10) CONSTRAINT Subscription_ID_uk UNIQUE, User_ID Varchar2(12), Plan_Code Varchar2(20), Start_Date Date, End_Date Date,Status Varchar2(20), CONSTRAINT user_id_fk FOREIGN KEY (User_ID) REFERENCES USER_TBL(User_ID));
  
  INSERT INTO SUBSCRIPTION_TBL VALUES(810001,'USR1001','MONTHLY_STD',TO_DATE('2025-03-01','YYYY-MM-DD'),TO_DATE('2025-03-31','YYYY-MM-DD'),'ACTIVE');
  INSERT INTO SUBSCRIPTION_TBL VALUES(810002,'USR1002','ANNUAL_PREM',TO_DATE('2025-01-10','YYYY-MM-DD'),TO_DATE('2026-01-09','YYYY-MM-DD'),'ACTIVE');
  INSERT INTO SUBSCRIPTION_TBL VALUES(810003,'USR1003','MONTHLY_STD',TO_DATE('2025-02-01','YYYY-MM-DD'),TO_DATE('2025-02-28','YYYY-MM-DD'),'CANCELLED');
  

 CREATE TABLE PAYMENT_TBL(Payment_ID Number(12) CONSTRAINT payment_id_uk UNIQUE,Subscription_ID Number(10),Amount Number(12,2),Payment_Date Date,Payment_Method Varchar2(50),Status Varchar2(20),
 CONSTRAINT subscription_id_fk FOREIGN KEY (Subscription_ID) REFERENCES SUBSCRIPTION_TBL(Subscription_ID));
 
 INSERT INTO PAYMENT_TBL VALUES(920001,810001,199.00,TO_DATE('2025-03-01','YYYY-MM-DD'),'CARD','SUCCESS');
