 //Subscription sequence
 Create sequence subscription_seq 
        START WITH 1000
		MINVALUE 1000
		MAXVALUE 9999
		INCREMENT BY 1;		
//payment sequence
Create sequence payment_seq START WITH 5000
		MINVALUE 5000
		MAXVALUE 9999
		INCREMENT BY 1;